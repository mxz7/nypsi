{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "commonjs",
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "paths": {
      "@generated/prisma": ["./src/generated/prisma/client"]
    }
  },
  "exclude": ["node_modules", "dist", "prisma"]
}
